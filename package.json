{
  "name": "corporate-chat-backend",
  "version": "1.0.0",
  "description": "Corporate Chat Backend with PostgreSQL, Socket.io, JWT Authentication",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node database/seed.js",
    "postbuild": "node scripts/restore_production_snapshot.js",
    "test": "node tests/directMessages.test.js",
    "db:init": "psql -U postgres -d corporate_chat -f database/schema.sql",
    "restore:snapshot": "node scripts/restore_production_snapshot.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "license": "ISC"
}
