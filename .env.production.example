# ================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Для Beget (chat.gyda.ru)
# ================================================

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
# ВАЖНО: Замените на реальные данные из панели Beget!
DATABASE_URL=postgresql://YOUR_DB_USER:YOUR_DB_PASSWORD@localhost:5432/YOUR_DB_NAME

# JWT Configuration
# ВАЖНО: Сгенерируйте новые секретные ключи!
# Используйте: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=ЗАМЕНИТЕ_НА_СЛУЧАЙНЫЙ_КЛЮЧ_32_СИМВОЛА_МИНИМУМ
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=ЗАМЕНИТЕ_НА_ДРУГОЙ_СЛУЧАЙНЫЙ_КЛЮЧ
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://chat.gyda.ru

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_KEEP_DAYS=7
AUTO_BACKUP=true
BACKUP_HOUR=3
BACKUP_INTERVAL_HOURS=24

# Logging
LOG_QUERIES=false
ENABLE_VIRUS_SCAN=false
